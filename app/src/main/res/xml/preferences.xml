
   <PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Opción para cambiar el idioma -->
    <PreferenceCategory>
        <ListPreference
            android:key="language_preference"
            android:title="@string/select_language"
            android:defaultValue="es"
            android:entries="@array/language_entries"
            android:entryValues="@array/language_values"
            android:summary="%s"
            android:selectable="true" />
    </PreferenceCategory>

    <!-- Opción para habilitar/deshabilitar eliminación de Pokémon -->
    <PreferenceCategory>
        <SwitchPreferenceCompat
            android:key="delete_pokemon_enabled"
            android:title="@string/delete_pokemon_title"
            android:defaultValue="false"
           />
    </PreferenceCategory>

    <!-- Opción "Acerca de" -->
    <PreferenceCategory>
        <Preference
            android:key="about"
            android:title="@string/about"
           />
    </PreferenceCategory>

    <!-- Opción para cerrar sesión -->
    <PreferenceCategory>
        <Preference
            android:key="logout"
            android:title="@string/logout"
           />
    </PreferenceCategory>


</PreferenceScreen>